<%- include('./partials/header') %>
<h3 class="text-3xl font-semibold text-blue-400 px-20 py-5">Your Cart</h3>
<% if(user.cart.length === 0){ %>
  <h3 class="text-xl pt-0 px-20">Your cart is empty</h3>
  <% } %>
  <div class="w-full flex flex-wrap items-start px-20 py-5 gap-5">
<% user.cart.forEach(function(item){ %>
        <div class="w-64 rounded-md overflow-hidden">
          <div
            class="flex relative justify-center items-center w-full h-52 bg-[<%= item.bgcolor %>]"
          >
          <div class="absolute text-black top-1 right-1">
            <a href="/delete/<%= item._id %>">
            <img width="20" src="/img/delete.png" alt="">
            </a>
          </div>
            <img
              class="p-2 w-3/2 h-full"
              src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
              alt=""
            />
          </div>
          <div
            class="w-full flex justify-between px-5 py-4 text-[<%= item.textcolor %>] bg-[<%= item.panelcolor %>]"
          >
            <h3 class="text-2xl"><%= item.name %></h3>
            <!-- <div class="flex items-center gap-2">
              <i
                class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
              ></i>
              <div class="px-2 py-1 rounded-md bg-white">01</div>
              <i
                class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
              ></i>
            </div> -->
          </div>
          <div
            class="flex items-center justify-between px-5 py-3 text-[<%= item.panelcolor %>] bg-[<%= item.textcolor %>]"
          >
            <h4 class="text-lg">Price</h4>
            <h2 class="text-lg">Rs. <%= item.price %>/-</h2>
          </div>
        </div>
        <% }) %>
    </div>
    <% if(user.cart.length > 0){ %>
        <div class="w-[70%] flex flex-col mx-auto pb-10">
          <h3 class="text-3xl font-bold text-center">Price Breakdown</h3>
          <div class="px-10 mt-5">
            <div class="flex mt-2">
              <h4 class="w-1/3">Total Price</h4>
              <h4>Rs. <%= price %>/-</h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Total Discount</h4>
              <h4>Rs. <%= discount %>/-</h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Platform Fee</h4>
              <h4>Rs. <%= platform %>/-</h4>
            </div>
            <div class="flex mt-2">
              <h4 class="w-1/3">Shipping Fee</h4>
              <h4>FREE</h4>
            </div>
          </div>
          <div class="w-full h-[1px] bg-black mt-10"></div>
          <div class="flex mt-5">
            <h3 class="w-1/3 text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">Rs. <%= bill %>/-</h3>
          </div>
          <form action=""></form>
        </div>
    <% } %>
      </div>

<%- include('./partials/footer') %>
